<Page x:Class="AutoDischange.View.Pages.DischangeComponent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoDischange.View.Pages"
      xmlns:vm="clr-namespace:AutoDischange.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DischangeComponent">
    <Page.Resources>
        <vm:DischangeVM x:Key="vm" />
    </Page.Resources>
    <Grid  DataContext="{StaticResource vm}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10" >
            <Button Content="Abrir Excel"
                    HorizontalAlignment="Center"
                    Command="{Binding DischangeCommand}"/>
        </StackPanel>
    </Grid>
</Page>
